<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <LinearGradientBrush x:Key="BlueGradientBrush" 
    StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF3399FF" Offset="0" />
        <GradientStop Color="#FF3399FF" Offset="1" />
    </LinearGradientBrush>


    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource BlueGradientBrush}"></Setter>
        <Setter Property="Foreground" Value="AliceBlue"></Setter>
        
    </Style>
    
    
    
    
</ResourceDictionary>